{
  "name": "thefrosty/wp-utilities",
  "description": "A library containing my standard development resources",
  "license": "MIT",
  "authors": [
    {
      "name": "Austin Passy",
      "email": "thefrosty@users.noreply.github.com",
      "homepage": "https://austin.passy.co",
      "role": "Developer"
    }
  ],
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "ext-openssl": "*",
    "johnbillion/args": "^1.0.0",
    "psr/container": "^2.0.2"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.6",
    "phpunit/phpunit": "^8",
    "pimple/pimple": "^3.5",
    "roots/wordpress": "^5.6.1",
    "squizlabs/php_codesniffer": "^3.2",
    "szepeviktor/phpstan-wordpress": "^1.0",
    "wp-phpunit/wp-phpunit": "^5.6.1",
    "yoast/phpunit-polyfills": "^1.0.1"
  },
  "suggest": {
    "pimple/pimple": "",
    "symfony/http-foundation": ""
  },
  "autoload": {
    "psr-4": {
      "TheFrosty\\WpUtilities\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TheFrosty\\WpUtilities\\Tests\\": "tests/unit/"
    }
  },
  "scripts": {
    "install-codestandards": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ],
    "phpcs": [
      "bash ./bin/phpcs.sh"
    ],
    "phpmd": [
      "bash ./bin/phpmd.sh"
    ],
    "phpunit": [
      "./vendor/bin/phpunit --colors"
    ],
    "phpstan": [
      "./vendor/bin/phpstan analyze"
    ],
    "tests": [
      "@phpcs",
      "@phpmd",
      "@phpunit"
    ]
  }
}
